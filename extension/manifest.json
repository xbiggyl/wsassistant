{
  "manifest_version": 3,
  "name": "MeetAssist - AI Meeting Assistant",
  "version": "1.0.0",
  "description": "Offline AI-powered meeting assistant for Google Meet with transcription, speaker identification, and intelligent summaries",
  
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting",
    "desktopCapture",
    "tabs"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content/inject.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "MeetAssist"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/sidebar/index.html",
        "sidebar.js",
        "index.css"
      ],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}