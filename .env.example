# MeetAssist Server Configuration

# WebSocket Server
WS_PORT=3001

# SMTP Configuration (for meeting minutes email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=meetassist@yourdomain.com

# Storage Configuration
STORAGE_DIR=./MeetAssist

# Whisper Configuration
WHISPER_MODEL=tiny-int8
WHISPER_LANGUAGE=auto

# Summary Service Configuration  
SUMMARY_INTERVAL_MINUTES=5
SUMMARY_MAX_TOKENS=500

# Summary Provider Configuration
# Options: 'local' or 'openai'
SUMMARY_PROVIDER=local

# OpenAI Configuration (only needed if SUMMARY_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Local Model Configuration (only needed if SUMMARY_PROVIDER=local)
LOCAL_MODEL_PATH=./models/gpt-4o-mini-local
LOCAL_MODEL_TYPE=gguf

# Debug Configuration
DEBUG=meetassist:*
NODE_ENV=development